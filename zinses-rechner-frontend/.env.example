# 环境变量示例文件
# 复制此文件为 .env.local 并填入实际值

# =================================
# 应用基础配置
# =================================
VITE_APP_TITLE="Zinses Rechner"
VITE_APP_DESCRIPTION="Professional German Financial Calculator"
VITE_APP_VERSION="1.0.0"
VITE_APP_AUTHOR="Zinses Rechner Team"

# 应用环境
VITE_NODE_ENV="development"
VITE_APP_ENV="development"

# 应用URL配置
VITE_APP_URL="http://localhost:5173"
VITE_API_BASE_URL="http://localhost:3000/api"
VITE_CDN_URL=""

# =================================
# 安全配置
# =================================
# CSP Nonce (生产环境由服务器生成)
VITE_CSP_NONCE=""

# API密钥加密盐值
VITE_ENCRYPTION_SALT="your-encryption-salt-here"

# JWT密钥 (仅用于客户端验证，不用于签名)
VITE_JWT_PUBLIC_KEY=""

# =================================
# 第三方API配置
# =================================
# 欧洲央行API
VITE_ECB_API_URL="https://api.ecb.europa.eu/v1"
VITE_ECB_API_KEY=""

# 德国央行API
VITE_BUNDESBANK_API_URL="https://api.bundesbank.de/bbk"
VITE_BUNDESBANK_API_KEY=""

# Yahoo Finance API
VITE_YAHOO_FINANCE_API_URL="https://query1.finance.yahoo.com/v8/finance"
VITE_YAHOO_FINANCE_API_KEY=""

# Fixer.io汇率API
VITE_FIXER_API_URL="https://api.fixer.io/v1"
VITE_FIXER_API_KEY=""

# =================================
# 监控和分析
# =================================
# Google Analytics
VITE_GA_MEASUREMENT_ID=""

# Sentry错误监控
VITE_SENTRY_DSN=""
VITE_SENTRY_ENVIRONMENT="development"
VITE_SENTRY_RELEASE=""

# 性能监控
VITE_PERFORMANCE_MONITORING_ENDPOINT=""
VITE_PERFORMANCE_MONITORING_API_KEY=""

# =================================
# 日志和错误报告
# =================================
# 日志级别 (debug, info, warn, error)
VITE_LOG_LEVEL="info"

# 远程日志服务
VITE_LOGGING_ENDPOINT=""
VITE_LOGGING_API_KEY=""

# 错误报告服务
VITE_ERROR_REPORTING_ENDPOINT=""
VITE_ERROR_REPORTING_API_KEY=""

# =================================
# 缓存和存储
# =================================
# Redis配置 (如果使用)
VITE_REDIS_URL=""

# 本地存储加密
VITE_STORAGE_ENCRYPTION_KEY=""

# =================================
# 邮件服务
# =================================
# 邮件服务配置
VITE_MAIL_SERVICE_URL=""
VITE_MAIL_SERVICE_API_KEY=""

# 支持邮箱
VITE_SUPPORT_EMAIL="support@zinses-rechner.de"

# =================================
# 社交媒体和分享
# =================================
# Twitter/X
VITE_TWITTER_HANDLE="@zinses_rechner"

# Facebook
VITE_FACEBOOK_APP_ID=""

# LinkedIn
VITE_LINKEDIN_COMPANY_ID=""

# =================================
# PWA配置
# =================================
# 推送通知
VITE_VAPID_PUBLIC_KEY=""

# Web App Manifest
VITE_MANIFEST_THEME_COLOR="#2563eb"
VITE_MANIFEST_BACKGROUND_COLOR="#ffffff"

# =================================
# 开发工具配置
# =================================
# 开发服务器端口
VITE_DEV_SERVER_PORT="5173"

# 是否启用开发工具
VITE_ENABLE_DEVTOOLS="true"

# 是否启用性能监控面板
VITE_ENABLE_PERFORMANCE_PANEL="true"

# 是否启用调试模式
VITE_DEBUG_MODE="false"

# =================================
# 构建配置
# =================================
# 是否启用源码映射
VITE_GENERATE_SOURCEMAP="false"

# 是否启用构建分析
VITE_ANALYZE_BUNDLE="false"

# 构建目标目录
VITE_BUILD_OUTDIR="dist"

# =================================
# 测试配置
# =================================
# 测试环境API URL
VITE_TEST_API_URL="http://localhost:3001/api"

# 是否启用测试覆盖率
VITE_ENABLE_COVERAGE="false"

# =================================
# 部署配置
# =================================
# 部署环境
VITE_DEPLOY_ENV="development"

# CDN配置
VITE_USE_CDN="false"
VITE_CDN_DOMAIN=""

# 静态资源版本
VITE_ASSETS_VERSION=""

# =================================
# 安全头配置
# =================================
# 内容安全策略
VITE_CSP_REPORT_URI=""

# HSTS配置
VITE_HSTS_MAX_AGE="31536000"

# 权限策略
VITE_PERMISSIONS_POLICY=""

# =================================
# 数据库配置 (如果需要)
# =================================
# 数据库连接
VITE_DATABASE_URL=""

# 数据库加密密钥
VITE_DATABASE_ENCRYPTION_KEY=""

# =================================
# 备份和恢复
# =================================
# 备份服务配置
VITE_BACKUP_SERVICE_URL=""
VITE_BACKUP_SERVICE_API_KEY=""

# =================================
# 合规性配置
# =================================
# GDPR合规
VITE_GDPR_ENABLED="true"
VITE_PRIVACY_POLICY_URL="/privacy"
VITE_TERMS_OF_SERVICE_URL="/terms"

# Cookie同意
VITE_COOKIE_CONSENT_ENABLED="true"

# =================================
# 功能开关
# =================================
# 实验性功能
VITE_ENABLE_EXPERIMENTAL_FEATURES="false"

# A/B测试
VITE_ENABLE_AB_TESTING="false"

# 维护模式
VITE_MAINTENANCE_MODE="false"

# 用户注册
VITE_ENABLE_USER_REGISTRATION="true"

# 社交登录
VITE_ENABLE_SOCIAL_LOGIN="false"

# 多语言支持 (未来扩展)
VITE_ENABLE_I18N="false"

# =================================
# 性能配置
# =================================
# 资源预加载
VITE_ENABLE_RESOURCE_PRELOAD="true"

# 服务工作者
VITE_ENABLE_SERVICE_WORKER="true"

# 代码分割
VITE_ENABLE_CODE_SPLITTING="true"

# 图片懒加载
VITE_ENABLE_IMAGE_LAZY_LOADING="true"

# =================================
# 通知配置
# =================================
# 浏览器通知
VITE_ENABLE_BROWSER_NOTIFICATIONS="true"

# 邮件通知
VITE_ENABLE_EMAIL_NOTIFICATIONS="true"

# 短信通知 (如果需要)
VITE_ENABLE_SMS_NOTIFICATIONS="false"
VITE_SMS_SERVICE_URL=""
VITE_SMS_SERVICE_API_KEY=""
