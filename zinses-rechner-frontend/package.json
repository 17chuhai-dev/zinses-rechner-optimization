{
  "name": "zinses-rechner-frontend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "deploy": "bash deploy.sh",
    "deploy:cf": "export CLOUDFLARE_EMAIL=yigetech@gmail.com && export CLOUDFLARE_API_KEY=d70a07155b7e29ba4c0fe1ac05e976fe6852f && npx wrangler pages deploy dist --project-name=zinses-rechner",
    "test:unit": "vitest run src/**/*.test.ts",
    "test:components": "vitest run src/components/**/*.test.ts",
    "test:services": "vitest run src/services/**/*.test.ts",
    "test:composables": "vitest run src/composables/**/*.test.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:watch": "vitest",
    "test:all": "chmod +x scripts/run-tests.sh && ./scripts/run-tests.sh",
    "dsgvo:check": "vitest run src/scripts/dsgvo-compliance-check.test.ts",
    "dsgvo:report": "vitest run src/scripts/dsgvo-compliance-check.test.ts > dsgvo-compliance-report.txt",
    "build:analyze": "ANALYZE=true npm run build-only",
    "build:production": "NODE_ENV=production npm run build",
    "build:stats": "npm run build:analyze && node scripts/build-optimization.js analyze",
    "preview:production": "vite preview --mode production",
    "deploy:preview": "npm run build && npx wrangler pages deploy dist --project-name=zinses-rechner-preview",
    "deploy:production": "npm run build:production && npx wrangler pages deploy dist --project-name=zinses-rechner",
    "lighthouse": "lighthouse http://localhost:4173 --output=json --output=html --output-path=./lighthouse-report",
    "lighthouse:ci": "lhci autorun",
    "size-check": "npm run build:analyze && open dist/stats.html",
    "perf:analyze": "node scripts/build-optimization.js all",
    "perf:budget": "node scripts/performance-budget-check.js",
    "perf:monitor": "npm run build && npm run lighthouse && npm run perf:budget",
    "optimize:images": "node scripts/build-optimization.js images",
    "optimize:deps": "node scripts/build-optimization.js deps",
    "bundle:visualize": "npm run build:analyze && npx webpack-bundle-analyzer dist/stats.json",
    "preload:generate": "node scripts/generate-preload-hints.js",
    "dev:simple": "vite --config vite-simple.config.ts",
    "build:simple": "vite build --config vite-simple.config.ts",
    "deploy:simple": "npm run build:simple && export CLOUDFLARE_EMAIL=\"yigetech@gmail.com\" && export CLOUDFLARE_API_KEY=\"d70a07155b7e29ba4c0fe1ac05e976fe6852f\" && npx wrangler pages deploy dist-simple --project-name=zinses-rechner-test"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.23",
    "@heroicons/vue": "^2.2.0",
    "chart.js": "^4.5.0",
    "chartjs-plugin-zoom": "^2.2.0",
    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.2",
    "pinia": "^3.0.3",
    "vue": "^3.5.18",
    "vue-chartjs": "^5.3.2",
    "vue-router": "^4.5.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tsconfig/node22": "^22.0.2",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^22.16.5",
    "@vitejs/plugin-legacy": "^5.4.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "chalk": "^5.3.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "~10.3.0",
    "form-data": "^4.0.4",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.2.1",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "rollup-plugin-visualizer": "^5.12.0",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.4.17",
    "terser": "^5.36.0",
    "typescript": "~5.8.0",
    "vite": "^5.4.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-pwa": "^0.17.4",
    "vite-plugin-vue-devtools": "^7.4.6",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.4",
    "web-vitals": "^4.2.4",
    "webpack-bundle-analyzer": "^4.10.2",
    "workbox-window": "^7.0.0",
    "wrangler": "^4.33.1"
  }
}
